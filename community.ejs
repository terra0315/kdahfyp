    <!-- Header -->
    <header class="header">
        <div class="nav-container">
            <a href="#" class="brand-logo">K-DAH</a>
            <nav class="nav-links">
                <a href="#" class="nav-link">Home</a>
                <a href="#" class="nav-link">Forums</a>
                <a href="#" class="nav-link">Resources</a>
                <a href="#" class="nav-link">Directory</a>
                <a href="#" class="nav-link primary">Login / Register</a>
